<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
 <% end %>
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
      <p>name</p>
      <%= @user.name %>
      <%= @user.introduction %>
      <%= link_to "edit", edit_user_path(current_user.id) %>

      <h1>New book</h1>
      <%= form_for(@book) do |f| %>
          <h4>title</h4>
          <%= f.text_field :title %>
          <h4>opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-9">
      <table class="table table-striped">
        <thead>
          <h1>Books</h1>
          <p>title</p>
          <p>opinion</p>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            	<tr>
                <td><%= link_to user_path(book.user) do %>
            	  <span><%= attachment_image_tag book.user, :profile_image, size: "50x50", fallback: "no_image.jpg" %></span>
            	<% end %></td>
            	<td><%= link_to book_path(book.id) do %>
            	  <span><%= book.title %></span>
            	<% end %></td>
            	  <td> <span><%= book.body %></span></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>

 <div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

