<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
       <div class ="row">
         <nav class="nav navbar-nav navbar-left">
          <h2>Bookers</h2>
         </nav>
          <% if user_signed_in? %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li ><%= link_to "Home", user_path(current_user.id),class: 'glyphicon glyphicon-home home' %></li>
            <li ><%= link_to "User", users_path,class: 'glyphicon glyphicon-user users' %></li>
            <li ><%= link_to "Books", books_path,class: 'glyphicon glyphicon-book books' %></li>
            <li ><%= link_to "logout", destroy_user_session_path, method: :delete,class: 'glyphicon glyphicon-log-out logout' %></li>
          </ul>
          <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to "Home", root_path %>
            </li>
            <li class="glyphicon glyphicon-home home"><%= link_to "Home", root_path %></li>
            <li class="glyphicon glyphicon-link about"><%= link_to "About", home_about_path %></li>
            <li class="glyphicon glyphicon-edit sign_up"><%= link_to "sign up", new_user_registration_path %></li>
            <li class="glyphicon glyphicon-log-in sign_in"><%= link_to "login", new_user_session_path %></li>
          </ul>
          <% end %>
        </nav>
      </div>
      </div>
    </header>

    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <%= yield %>

    <footer>
      <h2>CopyRight Infratop.inc</h2>
    </footer>

  </body>
</html>
