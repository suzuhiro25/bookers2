<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
 <% end %>
<div class="row">
  <div class="col-md-3">
    <table class="table">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
      <tr><td><p>name</p></td>
      <td><%= @user.name %></td></tr>
      <tr><td><p>introduction</p></td>
      <td><%= @user.introduction %></td></tr>
    </table>

      <%= link_to edit_user_path(@user.id) do %>
       <button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
      <% end %>
        <h1>New book</h1>
    <%= form_for(@book) do |f| %>
      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>opinion</h4>
      <%= f.text_area :body %>
      <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
    <% end %>
  </div>
  <div class="col-md-9">
    <table class="table table-striped">
      <thead>
        <h1>Users</h1>
        <td><p>image</p></td>
        <td><p>name</p></td>
      </thead>
      <tbody>
        <% @users.each do |user| %>
            <tr><td><span><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg" %></span></td>
            <td><span><%= user.name %></span></td>
            <td><%= link_to "Show", user_path(user.id) %></td></tr>
         <% end %>
         <div>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <tr><td><li><%= message %></li></td></tr>
              <% end %>
            </ul>
          </div>
      </tbody>
    </table>
  </div>
</div>